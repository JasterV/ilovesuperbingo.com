<style>
  .content {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .super-bingo-loves-you {
    font-family: "Kapakana";
    text-align: center;
    font-size: 5rem;
  }

  .heart {
    font-size: 3rem;
    color: red;
  }

  @media screen and (min-width: 636px) {
    .super-bingo-loves-you {
      font-size: 10rem;
    }

    .heart {
      font-size: 8rem;
    }
  }
</style>
