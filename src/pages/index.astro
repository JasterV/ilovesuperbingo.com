---
import Layout from "@layouts/Layout.astro";
---

<Layout title="Super Bingo">
  <section class="content">
    <div class="super-bingo-loves-you">
      <p>Super bingo</p>
      <span class="heart">‚ù§</span>
      <p>You</p>
    </div>

    <div class="snoopy"></div>
